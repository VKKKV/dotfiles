{
    "extensions.updateCheck": "weekly",
    "extensions.updateUIInTab": true,
    "coc.preferences.autoApplySingleQuickfix": false,
    "coc.preferences.enableLinkedEditing": true,
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.messageDialogKind": "notification",
    "coc.preferences.willSaveHandlerTimeout": 500,
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.maxFileSize": "20MB",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true,
        "source.fixAll": true
    },
    "floatFactory.floatConfig": {
        "border": true,
        "rounded": true
    },
    "npm.binPath": "npm",
    "languageserver": {
        "nix": {
            "command": "nil",
            "rootPatterns": [
                "flake.nix"
            ],
            "filetypes": [
                "nix"
            ],
            "settings": {
                "nil": {
                    "formatting": {
                        "command": [
                            "nixfmt"
                        ]
                    }
                }
            }
        }
    },
    "colors.enable": true,
    "diagnostic.displayByVimDiagnostic": false,
    "pullDiagnostic.onChange": true,
    "pullDiagnostic.onSave": true,
    "snippets.ultisnips.enable": true,
    "suggest.floatConfig": {
        "border": true,
        "rounded": true,
        "maxWidth": 80
    },
    "suggest.timeout": 2000,
    "suggest.enablePreselect": true,
    "coc.source.file.ignoreHidden": false,
    "eslint.autoFixOnSave": true,
    "eslint.format.enable": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "Lua.completion.callSnippet": "Both",
    "Lua.diagnostics.globals": [
        "vim",
        "jit"
    ],
    "Lua.runtime.version": "LuaJIT",
    "python.linting.enabled": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.formatting.provider": "ruff",
    "tsserver.useLocalTsdk": true,
    "tsserver.enable": true,
    "tsserver.log": "verbose",
    "typescript.suggest.autoImports": true,
    "typescript.preferences.includePackageJsonAutoImports": "auto",
    "javascript.suggest.autoImports": true,
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.preferences.useAliasesForRenames": false,
    "notification.statusLineProgress": true,
    "semanticTokens.enable": true,
    "list.source.files.defaultOptions": [
        "--number-select"
    ]
}
