#!/usr/bin/zsh
# @auther vkkkv
# 查找系统中的可执行文件
# 这里使用 `find` 命令查找 /usr/bin 和 /usr/local/bin 中的可执行文件
# 你可以根据需要修改查找的路径
program=$(echo -n "$PATH" | sed 's/.\/node_modules\/.bin://'  | xargs -d : -I {} -r find -L {} -maxdepth 1 -mindepth 1 -type f -executable | sed 's/^.*\///' | sort | fzf --preview 'tldr {}' --preview-window=right:70%:wrap)

# 检查用户是否选择了程序
if [ -n "$program" ]; then
	# 执行选择的程序
	exec "$program"
fi

