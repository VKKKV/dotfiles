{
  "editor.lineNumbers": "relative",
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.ignorecase": true,
  "editor.rulers": [80],
  "editor.wordWrapColumn": 80,
  "files.encoding": "utf8",
  "vim.normalModeKeyBindings": [
    { "before": ["<Leader>", "s"], "commands": [":w!"] },
    { "before": ["<Leader>", "q"], "commands": [":q!"] },
    { "before": ["<Leader>", "t"], "commands": [":tabnew"] },
    { "before": ["<Leader>", "p"], "commands": [":bprevious"] },
    { "before": ["<Leader>", "n"], "commands": [":bnext"] },
    { "before": ["<Leader>", "x"], "commands": [":bd"] }
  ],

  "vim.leader": " ",

  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-r>": false,
    "<C-b>": false,
    "<C-c>": false
  },

  "vim.statusBarColors.insert": ["#BF616A", "#000"],
  "vim.statusBarColors.visual": ["#B48EAD", "#000"],
  "vim.statusBarColors.visualline": ["#B48EAD", "#000"],
  "vim.statusBarColors.visualblock": ["#A3BE8C", "#000"],
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",

  "editor.renderWhitespace": "all"
}
